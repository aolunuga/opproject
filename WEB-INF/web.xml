<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>

   <display-name>OnePoint Project</display-name>
   <description>
      OnePoint Project 06 Team Edition (c) 2006 OnePoint Software GmbH
   </description>

   <servlet>
        <servlet-name>OpProjectServlet</servlet-name>
        <servlet-class>onepoint.project.servlet.OpProjectServlet</servlet-class>
        <init-param>
           <param-name>webimages_path</param-name>
           <param-value>opproject/images/</param-value>
        </init-param>
        <init-param>
           <param-name>applet_codebase</param-name>
           <param-value>opproject/applet</param-value>
        </init-param>
        <init-param>
           <param-name>applet_archive</param-name>
           <param-value>express4j-client.jar,opproject-client-06.1-beta.jar,jcookie-0.8b.jar</param-value>
        </init-param>
    </servlet>

    <servlet-mapping>
        <servlet-name>OpProjectServlet</servlet-name>
        <url-pattern>/service</url-pattern>
    </servlet-mapping>
   <session-config>
      <session-timeout>720</session-timeout>
   </session-config>
</web-app>

<form width="400" height="80" layout="border" default-button-ref="OKButton" resource-map-ref="project_status.delete"
      text="${ConfirmDelete}"
      provider-class="onepoint.project.modules.project_status.forms.OpConfirmDeleteProjectStatusFormProvider"
      script="/modules/project_status/scripts/confirm_project_status_delete.jes">
   <panel y="0" layout="border">
      <data-field id="ProjectStatusIds"/>
      <label y="0" id="ConfirmDeleteLabel"/>
      <panel y="1" layout="flow" direction="west">
         <button id="CancelButton" text="${Cancel}" on-button-pressed="cancel"/>
         <button id="OKButton" text="${OK}" on-button-pressed="ok"/>
      </panel>
   </panel>
</form>

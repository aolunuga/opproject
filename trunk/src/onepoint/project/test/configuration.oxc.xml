  <message-queue>
    <database-type>MySQLInnoDB</database-type>
    <database-driver>com.mysql.jdbc.Driver</database-driver>
    <database-url>jdbc:mysql:///opproject_test</database-url>
    <database-login>root</database-login>
    <database-password></database-password>
    <update-schedule>
      <minute>1</minute>
      <hour>*</hour>
      <month>*</month>
      <day-of-week>*</day-of-week>
    </update-schedule>
  </message-queue>
</configuration>

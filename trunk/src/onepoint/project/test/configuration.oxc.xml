<?xml version="1.0" encoding="UTF-8"?>
<configuration 
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="configuration.xsd">
  <database name="Default">
    <database-type>MySQLInnoDB</database-type>
    <database-driver>com.mysql.jdbc.Driver</database-driver>
    <database-url>jdbc:mysql:///opproject_test</database-url>
    <database-login>root</database-login>
    <database-password></database-password>
    <connection-pool-min-size>5</connection-pool-min-size>
    <connection-pool-max-size>20</connection-pool-max-size>
    
  </database>
  <cache-size>500</cache-size>
  <log-file>opproject.log</log-file>
  
  <!-- Set a large value here, to allow tests to fail with Out Of Memory -->
  <max-attachment-size>300</max-attachment-size>

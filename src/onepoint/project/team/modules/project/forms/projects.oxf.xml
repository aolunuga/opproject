<form id="ProjectsForm" layout="border" resource-map-ref="project.projects"
      extends="/modules/project/forms/projects.oxf.xml"
      provider-class="onepoint.project.team.modules.project.forms.OpProjectsAdvancedFormProvider"
      script="/team/modules/project/scripts/projects.jes">

   <tool-button id="NewTemplateButton" text="{$NewTemplate}" disabled-icon="/team/modules/project/icons/new_template_disabled.png"
                icon="/team/modules/project/icons/new_template.png" on-button-pressed="newTemplate" tooltip="{$NewTemplateTooltip}"
                parent-id="ProjectToolbar" child-index="2"/>
   <tool-button id="SaveAsTemplateButton" text="{$SaveAsTemplate}" disabled-icon="/team/modules/project/icons/save_as_template_disabled.png"
                icon="/team/modules/project/icons/save_as_template.png" on-button-pressed="saveAsTemplate"
                tooltip="{$SaveAsTemplateTooltip}" parent-id="ProjectToolbar"/>
</form>

<form width="400" height="80" layout="border"
      default-button-ref="OKButton"
      resource-map-ref="report_archive.delete"
      text="{$ConfirmDelete}"
      provider-class="onepoint.project.team.modules.report_archive.forms.OpConfirmDeleteReportFormProvider"
      script="/team/modules/report_archive/scripts/confirm_report_delete.jes">
   <panel y="0" layout="border">
      <data-field id="ReportIds"/>
      <label y="0" text="{$ConfirmDeleteText}"/>
      <panel y="1" layout="flow" direction="west">
         <button id="CancelButton" text="{$Cancel}" on-button-pressed="cancel"/>
         <button id="OKButton" text="{$Ok}" on-button-pressed="ok"/>
      </panel>
   </panel>
</form>
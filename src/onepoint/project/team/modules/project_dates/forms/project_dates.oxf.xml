<form id="ProjectDatesForm" layout="border"
      resource-map-ref="project_dates.project_dates"
      provider-class="onepoint.project.team.modules.project_dates.forms.OpProjectDatesAdvancedFormProvider"
      script="/team/modules/project_dates/scripts/project_dates.jes"
      extends="/modules/project_dates/forms/project_dates.oxf.xml">

   <data-set id="MilestoneSet"/>
   <data-set id="MilestonesColorsSet"/>

   <pop-up-menu id="MilestoneTablePopupMenu">
      <pop-up-item text="{$SaveCSV}" on-item-selected="saveMilestoneTableCSV"/>
      <pop-up-item text="{$SaveImage}" on-item-selected="saveMilestoneTableImage"/>
   </pop-up-menu>

   <pop-up-menu id="MilestoneChartPopupMenu">
      <pop-up-item text="{$SaveImage}" on-item-selected="saveMilestoneChartImage"/>
   </pop-up-menu>

   <tab text="{$Milestones}" layout="border" id="MileStoneTab" parent-id="ProjectDatesBox">
      <table-box id="MilestoneTable" data-set-ref="MilestoneSet" flexible="true" pop-up-menu-ref="MilestoneTablePopupMenu">
         <table-column text="{$Milestone}" data-column-index="0" width="200" sortable="true"/>
         <table-column text="{$CurrentDate}"/>
      </table-box>
   </tab>
   <tab text="{$MilestoneTrendAnalysis}" layout="border" id="$MilestoneTrendAnalysisTab" parent-id="ProjectDatesBox">
      <line-chart-box id="MilestoneChart" data-set-ref="MilestoneSet" value-type="Date" data-column-index="1"
                      data-column-count="5" data-caption-column-index="0" color-data-set-ref="MilestonesColorsSet"
                      grid-lines="horizontal" markers="true" sidebar-width="120"
                      pop-up-menu-ref="MilestoneChartPopupMenu"/>
      <color-legend-box x="1" id="MilestoneLegend" color-data-set-ref="MilestonesColorsSet"/>
   </tab>
</form>

<form id="MyProjectsForm" layout="border" resource-map-ref="my_projects.my_projects"
      extends="/modules/my_projects/forms/my_projects.oxf.xml"
      provider-class="onepoint.project.team.modules.my_projects.forms.OpAdvancedMyProjectsFormProvider"
      script="/team/modules/my_projects/scripts/my_projects.jes">

   <data-set id="BubbleColors"/>
   <data-set id="PipelineDataSet"/>

   <pop-up-menu id="PipelinePopupMenu">
      <pop-up-item id="MenuZoomIn" text="{$ZoomIn}" on-item-selected="zoomInPipeline" enabled="false"/>
      <pop-up-item id="MenuZoomOut" text="{$ZoomOut}" on-item-selected="zoomOutPipeline"/>
      <pop-up-separator/>
      <pop-up-item text="{$SaveImage}" on-item-selected="savePipelineImage"/>
   </pop-up-menu>

   <tab layout="border" text="{$PipelineChart}" id="PipelineTab" parent-id="MyTabBox">
      <panel x="0" layout="border">
         <pipeline-chart-box id="PipelineBox" data-set-ref="PipelineDataSet" color-data-set-ref="BubbleColors"
                             pop-up-menu-ref="PipelinePopupMenu"/>
         <panel y="1" id="PipelineToolBar" layout="flow" direction="east" visible="true">
            <button id="ButtonZoomIn" style-ref="icon-button-default" icon="/team/modules/my_projects/icons/b_zoomin.png"
                    disabled-icon="/team/modules/my_projects/icons/b_zoomin_disabled.png"
                    on-button-pressed="zoomInPipeline"
                    tooltip="{$ZoomIn}" enabled="false"/>
            <button id="ButtonZoomOut" style-ref="icon-button-default" icon="/team/modules/my_projects/icons/b_zoomout.png"
                    disabled-icon="/team/modules/my_projects/icons/b_zoomout_disabled.png"
                    on-button-pressed="zoomOutPipeline"
                    tooltip="{$ZoomOut}"/>
         </panel>
      </panel>
      <color-legend-box x="1" id="pipelineLegend" color-data-set-ref="BubbleColors"/>
   </tab>

</form>

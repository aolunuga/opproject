<form id="LicenseForm" layout="border" resource-map-ref="license.license"
      provider-class="onepoint.project.team.modules.license.forms.OpLicenseFormProvider"
      script="/modules/license/scripts/license.jes">

   <panel layout="border" style-ref="compact-panel-default">

      <panel layout="table" style-ref="table-panel-default">
         <label x="0" y="0" width="5" id="ErrorLabel" visible="false" style-ref="label-error-default"/>

         <label y="1" x="0" width="2" text="{$CustomerName}"/>
         <text-field y="1" x="2" width="3" id="CustomerName"/>
         <label y="2" x="0" width="2" text="{$CustomerNumber}"/>
         <text-field y="2" x="2" width="3" id="CustomerNumber"/>

         <label y="3" x="0" width="2" text="{$LicenseType}"/>
         <text-field y="3" x="2" width="3" id="Type"/>
         <label y="4" x="0" width="2" text="{$ValidUntil}"/>
         <text-field y="4" x="2" width="3" id="ValidUntil"/>

         <label y="5" x="0" width="2" text="{$Product}"/>
         <text-field y="5" x="2" width="3" id="Product"/>
         <label y="6" x="0" width="2" text="{$ProductCode}"/>
         <text-field y="6" x="2" width="3" id="ProductCode"/>
         <label y="7" x="0" width="2" text="{$ProductVersion}"/>
         <text-field y="7" x="2" width="3" id="ProductVersion"/>
         <label id="StandardUsersLabel" y="8" x="0" width="2" text="{$StandardUsers}"/>
         <text-field y="8" x="2" width="3" id="StandardUsers"/>
         <label id="ManagerUsersLabel" y="9" x="0" width="2" text="{$ManagerUsers}"/>
         <text-field y="9" x="2" width="3" id="ManagerUsers"/>

         <label y="10" x="0" width="2" text="{$PartnerName}"/>
         <text-field y="10" x="2" width="3" id="PartnerName"/>
         <label y="11" x="0" width="2" text="{$PartnerNumber}"/>
         <text-field y="11" x="2" width="3" id="PartnerNumber"/>

         <label y="12" x="0" width="2" text="{$LicenseVersion}"/>
         <text-field y="12" x="2" width="3" id="Version"/>
         <label y="13" x="0" width="2" text="{$Issuer}"/>
         <text-field y="13" x="2" width="3" id="Issuer"/>

      </panel>

      <status-bar y="1"/>

   </panel>

</form>

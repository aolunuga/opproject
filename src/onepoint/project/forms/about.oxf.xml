<form width="400" height="100" layout="border" resource-map-ref="main.about" text="{$About}"
   provider-class="onepoint.project.forms.OpAboutFormProvider"
   script="/scripts/about.jes">

   <panel y="0" layout="border">
      <panel y="-1" layout="table">
         <label x="0" y="0" width="2" text="{$Product}"/><text-field y="0" x="1" width="3" id="ProductName" enabled="false"/>
         <label x="0" y="1" width="2" text="{$Version}"/><text-field y="1" x="1" width="3" id="VersionNumber" enabled="false"/>
      </panel>
      <panel y="1" layout="border">
         <button x="0" id="OkButton" text="{$OK}" on-button-pressed="ok"/>
      </panel>
   </panel>
</form>

<form layout="border"
      resource-map-ref="report.resource_allocation"
      script="resource_allocation.jes"
      on-show="prepareForm">
	<data-set id="ResultSet"/>
	<data-field id="ProjectLocatorField"/>
   
  <!-- division orientation="horizontal" -->
   <panel layout="border">
   <panel y="-1" layout="table" style-ref="table-panel-default">
      <label x="0" y="0" width="5" id="ErrorLabel" text="{$InvalidProject}" visible="false" style-ref="label-error-default"/>
			<label x="0" y="1" width="2" text="{$Project}"/>
			<text-field x="2" y="1" width="2" id="ProjectNameField" enabled="false"/>
			<button x="4" y="1" text="{$Select}" on-button-pressed="chooseProject"/>
		</panel>
		<panel layout="border" style-ref="table-panel-default">
			<label x="1" y="1" text="{$QuickQueryNotAvailable}"/>
		</panel>
   </panel>
</form>

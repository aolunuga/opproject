<form layout="border" width="320" height="200" text="{$SelectPortfolio}" resource-map-ref="project.ProjectChooser"
      provider-class="onepoint.project.modules.project.forms.OpMoveProjectChooserFormProvider"
      script="/modules/project/scripts/move_project_chooser.jes">

   <data-set id="ProjectDataSet"/>
   <data-field id="ProjectNodeIdField"/>

   <data-set id="IconSet">
      <data-row icon="/modules/project/icons/portfolio.png"/>
   </data-set>

   <panel y="0" layout="border">
      <label y="-1" id="ErrorLabel" visible="false" style-ref="label-error-default"/>
      <list-box id="ProjectList" tree="true" data-set-ref="ProjectDataSet" icon-set-ref="IconSet"/>

      <panel y="1" layout="flow" direction="west">
         <panel layout="border">
            <button x="0" id="OkButton" text="{$OK}" on-button-pressed="ok"/>
            <button x="1" id="Cancel" text="{$Cancel}" on-button-pressed="cancel"/>
         </panel>
      </panel>

   </panel>

</form>

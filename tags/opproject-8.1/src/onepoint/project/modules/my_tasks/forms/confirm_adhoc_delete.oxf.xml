<form layout="border" default-button-ref="OKButton" resource-map-ref="my_tasks.delete" text="${ConfirmDelete}"
      provider-class="onepoint.project.modules.my_tasks.forms.OpConfirmDeleteAdhocFormProvider"
      script="/modules/my_tasks/scripts/confirm_adhoc_delete.jes">

   <panel y="0" layout="border">
      <data-field id="TaskIds"/>
      <label y="0" id="ConfirmDeleteLabel"/>
      <panel y="1" layout="flow" direction="west">
         <panel layout="border">
            <button x="0" id="OkButton" text="${OK}" on-button-pressed="ok"/>
            <button x="1" id="CancelButton" text="${Cancel}" on-button-pressed="cancel"/>
         </panel>
      </panel>
   </panel>

</form>
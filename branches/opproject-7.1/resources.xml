<project name="Language resources - Open" basedir="." default="zip">

   <property name="language" value="en"/>
   <property name="zipFile" value="resources"/>
   <property name="sourceDir" value="src"/>

   <property name="unzipFile" value="${zipFile}_${language}_open.zip"/>
   <property name="destination" value="src"/>

   <target name="zip" description="Archives the language resources">
      <zip zipfile="${zipFile}_${language}_open.zip">
         <fileset dir="${sourceDir}">
            <include name="**/*_${language}.olk.xml"/>
         </fileset>
      </zip>
   </target>

   <target name="unzip" description="Unarchive the language resources">
      <unzip src="${unzipFile}" dest="${destination}"/>
   </target>

</project>